<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="#232F34"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/app9"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:fontFamily="monospace"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/gradient_2"
                android:drawableLeft="@drawable/ic_home"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_name"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:background="@drawable/gradient_2"
                android:layout_below="@+id/text_view_address"
                android:fontFamily="monospace"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:textColor="#ffffff"
                android:padding="8dp"
                android:layout_marginTop="15dp"
                android:textSize="16dp"
                android:text="Name"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_person"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_order"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:background="@drawable/gradient_2"
                android:layout_below="@+id/text_view_name"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:padding="8dp"
                android:textColor="#ffffff"
                android:fontFamily="monospace"
                android:layout_marginTop="15dp"
                android:textSize="16dp"
                android:drawableLeft="@drawable/ic_border_color"
                android:text="Order"
                android:drawablePadding="8dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_phone_number"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:background="@drawable/gradient_2"
                android:layout_below="@+id/text_view_order"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:padding="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="monospace"
                android:textSize="16dp"
                android:text="Phone Number"
                android:textColor="#ffffff"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="8dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:padding="5dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="15dp"
                android:id="@+id/image_view_prescription"
                android:layout_below="@id/text_view_phone_number"
                android:background="@drawable/gradient_2" />


            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_view_prescription"
                android:orientation="horizontal">

                <Button
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/accept_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_view_prescription"
                    android:text="accept"
                    android:layout_marginRight="30dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/gradient_3"/>


                <Button
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/deny_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_view_prescription"
                    android:text="deny"
                    android:textColor="#ffffff"
                    android:background="@drawable/gradient_4"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>